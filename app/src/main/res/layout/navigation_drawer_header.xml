<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/navigation_drawer_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/layout_margin_40dp"
    android:layout_marginStart="@dimen/layout_margin_16dp"
    android:layout_marginEnd="@dimen/layout_margin_16dp"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/navHeaderImage"
            android:layout_width="@dimen/layout_size_60dp"
            android:layout_height="@dimen/layout_size_60dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_movie_open_white_24dp"
            android:contentDescription="@string/description_nav_drawer_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_8dp"
            android:textColor="@color/white"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="The Movie Database"
            android:text="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_16dp"
            android:textColor="@color/white"
            android:textAppearance="?attr/textAppearanceBody2"
            tools:text="https://themoviedb.org"
            android:text="@string/tmdb_website" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>